<Window x:Class="PhotoFilter.WPF.ImagePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImagePage" Height="406" Width="646">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" x:Name="FullImage" />
        <Label x:Name="lblError" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Visibility="Collapsed">Error occured</Label>
        <Button Grid.Row="1" x:Name="FilterImage" Content="Filter Sync" Width="100" Click="FilterImage_Click" Margin="10,0,528,0"/>
        <Button Grid.Row="1" x:Name="FilterImageParallel" Content="Filter Parallel" Width="100" Click="FilterImageParallel_Click" Margin="115,0,423,0"/>

    </Grid>
</Window>
